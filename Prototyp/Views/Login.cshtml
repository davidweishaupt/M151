@model Prototyp.Models.User


@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("loginTest", "Login"))
{
    <fieldset>
        <legend>Login</legend>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @if (@ViewBag.Message != null)
        {
            <div style="border: 1px solid red">
                @ViewBag.Message
            </div>
        }
        <table>
            <tr>
                <td>@Html.LabelFor(User => User.username) </td>
                <td> @Html.EditorFor(User => User.username, new { id = "txtUsername" }) </td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(User => User.username) </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(User => User.password) </td>
                <td> @Html.PasswordFor(User => User.password, new { id = "txtPassword" }) </td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(User => User.username) </td>
            </tr>

            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Login" />
                </td>
                <td>
                    <input type="submit" value="register" />
                </td>
            </tr>
        </table>
    </fieldset>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
